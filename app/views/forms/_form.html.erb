<%= simple_form_for @form do |f| %>
  <%= f.input :name, label: "Full name" %>
  <%= f.input :email, label: "E-Mail address", placeholder: 'user@domain.com' %>
  <%= f.input :comment %>
  <%= f.input :rating, as: :select, collection: [1,2,3,4,5] %>
  <%= f.input :would_recommend %>
  <%= f.button :submit, class: "btn btn-small" %>
<% end %>