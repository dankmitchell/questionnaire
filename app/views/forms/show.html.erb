<h1>User name:<%= @form.name %></h1>
<p><strong>E-Mail:</strong> <%= @form.email %></p>
<p><strong>Job title:</strong> <%= @form.job_title %></p>
<p><strong>Company name:</strong> <%= @form.company %></p>
<p><strong>Comment:</strong> <%= simple_format @form.comment %></p>
<p><strong>Rating:</strong> <%= @form.rating %></p>
<% if @form.would_recommend %>
<p><strong>Recommended</strong></p>
<% end %>
<p><%= link_to "Edit", edit_form_path(@form) %></p>
<p><%= link_to "Delete", form_path(@form), method: :delete, confirm: "Are you sure?" %></p>